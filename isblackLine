#include <stdbool.h>
#include <ctype.h>

/**
 * is_blank_line - Check if a line is blank (contains only white-space characters)
 * @line: The input line to check
 *
 * Return: true if the line is blank, false otherwise
 */
bool is_blank_line(const char *line) {
    while (*line != '\0') {
        if (!isspace((unsigned char)*line)) {
            return false;
        }
        line++;
    }
    return true;
}
